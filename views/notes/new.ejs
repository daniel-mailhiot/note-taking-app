<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../partials/head", { title }) %>
</head>

  <body>
    <%- include("../partials/header", { title }) %>

    <main class="container mt-4">
      <h1 class="text-center mb-4"><%= title %></h1>

      <!-- Form card -->
      <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
          <section class="card shadow-sm">
            <div class="card-body p-4">
              <form action="/notes" method="POST">
                <!-- Title field -->
                <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    maxlength="40"
                    required
                    placeholder="Enter a short note title"
                  />
                  <div class="form-text">
                    Keep it short and descriptive (max 40 characters).
                  </div>
                </div>

                <!-- Content field -->
                <div class="mb-3">
                  <label for="content" class="form-label">Content</label>
                  <textarea
                    class="form-control"
                    id="content"
                    name="content"
                    rows="6"
                    maxlength="2000"
                    required
                    placeholder="Write your note here..."
                  ></textarea>
                  <div class="form-text">
                    Add the main details of your note (max 2000 characters).
                  </div>
                </div>

                <!-- Action buttons -->
                <div class="d-flex gap-2">
                  <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Save Note
                  </button>
                  <a href="/notes" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                  </a>
                </div>
              </form>
            </div>
          </section>
        </div>
      </div>
    </main>


    <%- include("../partials/footer") %>

<%- include("../partials/scripts") %>
  </body>
</html>
