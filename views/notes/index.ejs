<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../partials/head", { title }) %>
</head>

  <body>
    <%- include("../partials/header", { title }) %>

    <main class="container mt-4">
      <!-- Top row: page title + create button -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
        <h1 class="mb-0"><%= title %></h1>

        <!-- Primary action: create a new note -->
        <a href="/notes/new" class="btn btn-primary">
          <i class="bi bi-plus-circle"></i> New Note
        </a>
      </div>

      <%# Empty-state helps user understand what to do when no data exists %>
      <% if (notes.length === 0) { %>
        <div class="text-center py-5">
          <p class="text-muted mb-3">No notes yet.</p>
          <a href="/notes/new" class="btn btn-primary">Create your first note</a>
        </div>
      <% } else { %>
        <!-- Notes grid -->
        <div class="row">
          <% notes.forEach(note => { %>
            <div class="col-12 col-md-6 col-xl-4 mb-4">
              <article class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                  <!-- Note title -->
                  <h2 class="h5 card-title"><%= note.title %></h2>

                  <!-- Note content preview -->
                  <p class="card-text text-muted flex-grow-1"><%= note.content %></p>

                  <!-- Actions for this specific note -->
                  <div class="d-flex gap-2 mt-3">
                    <a href="/notes/<%= note._id %>/edit" class="btn btn-outline-warning btn-sm">
                      <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a href="/notes/<%= note._id %>/delete" class="btn btn-outline-danger btn-sm">
                      <i class="bi bi-trash"></i> Delete
                    </a>
                  </div>
                </div>
              </article>
            </div>
          <% }) %>
        </div>
      <% } %>
    </main>

    <%- include("../partials/footer") %>

<%- include("../partials/scripts") %>
  </body>
</html>
