<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/notes">Notes App</a>

      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/notes">All Notes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/notes/new">Create Note</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/auth/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/auth/register">Register</a>
          </li>
        </ul>
        <!-- Logout -->
        <form action="/auth/logout" method="POST" class="d-flex">
          <button type="submit" class="btn btn-outline-danger btn-sm">
            Logout
          </button>
          <!-- Display logged-in username for testing -->
        <% if (currentUsername) { %>
          <span class="navbar-text me-2">
            Logged in as: <strong><%= currentUsername %></strong>
          </span>
        <% } else { %>
          <span class="navbar-text me-2 text-muted">
            Not logged in
          </span>
        <% } %>
        </form>
      </div>
    </div>
  </nav>
</header>
